<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Messages</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h2>Chat Messages</h2>
      <form action="/chats/new" method="get">
        <button class="btn btn-outline-primary">New Chat</button>
      </form>
      <br />
      <% for (let chat of chats) { %>
      <div class="chat">
        <div class="chat-header">
          <p class="sender">
            <span
              ><i class="fa-solid fa-user"></i> &nbsp; <%= chat.from %></span
            >
          </p>
          <p class="receiver">To:&nbsp;<span><%= chat.to %></span></p>
          <p class="timestamp">
            Sent on: <%= chat.created_at.toString().split(" ").slice(0,
            3).join(" ") %>, <%= chat.created_at.toString().split(" ")[3] %>.
            &nbsp;At: <%= chat.created_at.toString().split(" ")[4] %>
          </p>

          <% if(chat.updated_at) { %>
          <p class="timestamp">
            Updated on: <%= chat.updated_at.toString().split(" ").slice(0,
            3).join(" ") %>, <%= chat.updated_at.toString().split(" ")[3] %>.
            &nbsp;At: <%= chat.updated_at.toString().split(" ")[4] %>
          </p>
          <% } %>
        </div>

        <div class="chat-message">
          <p><%= chat.msg %></p>
        </div>
        <br />
        <form action="/chats/<%= chat._id %>/edit" method="get">
          <button class="btn btn-primary">Edit</button>
        </form>
      </div>
      <% } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
