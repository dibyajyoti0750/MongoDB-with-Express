<%- include("includes/header", {title:"New Chat", stylesheet:"/new.css"}) %>
<body>
  <div class="chat-container">
    <h3>Write New Chat</h3>
    <form action="/chats" method="post">
      <input
        type="text"
        placeholder="Who are you?"
        name="from"
        class="input-field"
      />
      <textarea
        name="msg"
        placeholder="Write your message here..."
        class="textarea-field"
      ></textarea>
      <input
        type="text"
        placeholder="Add receiver"
        name="to"
        class="input-field"
      />
      <button class="send-button">Send</button>
    </form>
  </div>
</body>
